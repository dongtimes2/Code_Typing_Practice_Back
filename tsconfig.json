{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "rootDir": ".",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/*"]
}
